{
  "name": "questionnaire-",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:api": "cd api && npm install",
    "start:api": "cd api && npm run start",
    "start:api:dev": "cd api && npm run dev",
    "install:web": "cd web && npm install",
    "prepare:static": "cp -r web/build api",
    "build:web": "cd web && npm run build",
    "build:web:dev": "npm run build:web && npm run prepare:static",

    "install": "npm run install:api && npm run install:web",
    "build": "npm run build:web && prepare:static",
    "start": "npm run start:api",
    "watch:static": "nodemon --watch api/build",
    "serve": "concurrently \"npm start\" \"npm run watch:static\""
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
